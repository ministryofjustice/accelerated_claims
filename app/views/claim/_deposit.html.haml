= claim_form.fields_for deposit, builder: LabellingFormBuilder do |form|

  = form.radio_button_fieldset :received, 'Did you receive a deposit for the property on or after 6 April 2007?', class: 'radio inline js-depend', data: { depend: 'deposit' }

  %fieldset.hide.js-deposit.yes.radio{ id: 'deposit_type_fieldset' }
    %h3 What kind of deposit?
    .options
      - form.row :money_deposit do
        = form.labelled_check_box :money_deposit, 'A money deposit (for example cash or cheque)'.html_safe, class: 'js-depend', data: {depend: 'deposit-type-money'}
      - form.row :property_deposit do
        = form.labelled_check_box :property_deposit, 'A deposit in the form of property (for example an item of jewellery)'.html_safe, class: 'js-depend', data: { depend: 'deposit-type-property'}

    %p

    .money-deposit-type.hide.js-deposit-type-money.yes
      %h3= 'You need to be sure that:'.html_safe
      %ul
        %li= 'you gave the tenant all the information about the deposit scheme that landlords must provide'.html_safe
        %li= 'you kept the deposit in a government-backed deposit protection scheme and met the schemeâ€™s requirements'.html_safe

      = form.text_field_row  :ref_number, label: 'Enter the tenancy deposit scheme reference number'

    .property-deposit-type.hide.js-depoist-type-property.yes
      %ul
        %li= 'You need to be sure the deposit in the form of property was returned at the time notice was given.'.html_safe         
      




  / .sub-panel.inset.hide.js-deposit.yes
  /   - if false # suppress field until we receive new pdf
  /     = form.date_select_field_set :information_given_date, 'Enter the date when this information was given to the defendant', class: 'date-picker', date_select_options: @date_select_options
  

  / - choice = { 'Yes, and the deposit had been returned by the time notice was given' => 'Yes', 'No' => 'No'}
  


  / = form.radio_button_fieldset :as_property, 'Did you receive a deposit in the form of property on or after 6 April 2007? (This is a deposit, like an item of jewellery, that has been taken instead of cash.)', class: 'radio', choice: choice
