= claim_form.fields_for property, builder: LabellingFormBuilder do |form|

  = form.radio_button_fieldset :house,
      'What kind of property do you want to take back?',
      class: 'radio',
      data: { 'virtual-pageview' => '/accelerated/property-section' }

  .sub-panel.address#property
    = form.moj_postcode_picker 'property', vc: 'england+wales', street_hint: %Q{<span class="visuallyhidden">.</span><span class="hint js-only" style="display: none" id="room_number">Include the room number<span class="visuallyhidden">.</span></span><span class="hint nonjs block" id="room_number-non-js">If "Room or rooms in a property" was selected above, include the room number<span class="visuallyhidden">.</span></span>}
