= claim_form.fields_for property, builder: LabellingFormBuilder do |form|

  = form.radio_button_fieldset :house, 'The property you want to take back is:', class: 'radio', choice: {'A self-contained house, flat or bedsit'.html_safe => 'Yes', 'A room in a property <span class="hint">(tenants may share kitchen, bathroom or other rooms)</span>'.html_safe => 'No'}

  .sub-panel.address#property
    = form.text_area_row  :street,   label: 'Full address', class: 'street'
    = form.text_field_row :postcode, class: 'rel postcode', input_class: 'smalltext'
