
.sub-panel.claimant{ id: "claimant_#{claimant_id}_subpanel", 'data-claimant-id'=> claimant_id, class: claimant_id != 1 ? 'same-address' : '' }
  .row.divider
  .row
    = claimant_header claimant_id
 
  = claim_form.fields_for claimant_field, claimant, builder: LabellingFormBuilder do |form|
    = form.text_field_row :title,    class: 'title hide js-claimanttype individual', input_class: 'smalltext'
    = form.text_field_row :full_name, class: 'rel hide js-claimanttype individual'

    -# we want to execture the following bit of code if non-javascript (:claimant_1) or with javascript ("claimant_{{id}}")
    - if claimant_field == :claimant_1 || claimant_field == 'claimant_{{id}}'
      - if claimant_field == :claimant_1
        .row.hide.nonjs.js-claimanttype.individual OR 
      = form.text_field_row :organization_name, label: 'Company name or local authority name', class: 'rel hide js-claimanttype organization'
      
    .sub-panel.rel.address
      = form.text_area_row  :street,   label: 'Full address', class: 'rel street'
      = address_error_message("claimant_#{claimant_id}")
      = form.text_field_row :postcode, class: 'rel postcode', input_class: 'smalltext'




