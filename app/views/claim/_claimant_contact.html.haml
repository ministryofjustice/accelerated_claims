= claim_form.fields_for claimant_field, claimant_contact, builder: LabellingFormBuilder do |form|
  #claimant-contact.sub-panel.claimant-solicitor.js-claimanttype.individual.organization
    .row
      %details
        %summary
          %span.summary#contact-details Add phone and email (Optional)
        .panel-indent
          = form.text_field_row :email, label: add_optional_nonjs('Email'), class: 'rel email'
          = form.text_field_row :phone, label: add_optional_nonjs('Phone'), class: 'rel phone'
          = form.text_field_row :fax, label: add_optional_nonjs('Fax'), class: 'rel fax'
          = form.text_field_row :dx_number, label: add_optional_nonjs('DX number'), class: 'rel dx_number'

    .row
      %p
        If you want us to send correspondence about the case to a different address, enter it here.
        %span.hint.block.js-claimanttype.individual.js-only
          eg a legal representative's address (Optional)
        %span.hint.block.js-claimanttype.organization
          eg a legal representative or managing agent's address (Optional)
      %details
        %summary
          %span.summary#correspondence-address Add alternative address (Optional)
        .panel-indent
          = form.text_field_row :title, label: add_optional_nonjs('Title'),    class: 'rel title', input_class: 'smalltext'
          = form.text_field_row :full_name, label: add_optional_nonjs('Full name'), class: 'rel '
          = form.text_field_row :company_name, label: add_optional_nonjs('Company name'),  class: 'rel company_name'
          = form.moj_postcode_picker "claimant_contact", name: "claim[claimant_contact]", address_attr: 'street', hide: false

    .row#reference-block
      %details
        %summary
          %span.summary#reference-number Add a reference number (Optional)
        .panel-indent
          = render partial: 'reference_number', object: @claim.reference_number, locals: { claim_form: claim_form }

