.sub-panel{ id: "defendant_#{defendant_id}_subpanel", class: defendant_class_helper(defendant_id) }
  .row.divider
  .row
    = defendant_header defendant_id

  = claim_form.fields_for defendant_field, defendant, builder: LabellingFormBuilder do |form|
    = form.text_field_row :title, class: 'title', input_class: 'narrow'
    = form.text_field_row :full_name, class: 'rel'
    = form.hidden_field :inhabits_property
    .sub-panel.details{id: "defendant_#{defendant_id}_resident_address"}
      %details
        %summary.js-only
          %span.summary{ id: "defendant_#{defendant_id}_resident_details" } If the defendant is not living in the property, enter the address
        .panel-indent
          .hide.nonjs If the defendant is not living in the property, enter the address
          = form.moj_postcode_picker "defendant_#{defendant_id}"

