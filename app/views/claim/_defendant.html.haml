.sub-panel{ id: "defendant_#{defendant_id}_subpanel", class: defendant_class_helper(defendant_id) }
  .row.divider
  .row
    %h3= defendant_header defendant_id

  = claim_form.fields_for defendant_field, defendant, builder: LabellingFormBuilder do |form|
    = form.text_field_row :title, class: 'title', input_class: 'smalltext'
    = form.text_field_row :full_name, class: 'rel'


    .sub-panel.details{id: "defendant_#{defendant_id}_resident_address"}
      .row.js-only
        %a.caption{ id: "defendant_#{defendant_id}_resident_details", class: "js-inhabitproperty show-hide" , href: "#defendant-#{defendant_id}-resident-details", 'aria-expanded' => 'false' }
          = 'If the defendant is not living in the property, enter the address'
      = form.text_area_row  :street,   label: 'Full address', class: 'rel street'
      = address_error_message("defendant_#{defendant_id}")
      = form.text_field_row :postcode, class: 'rel postcode', input_class: 'smalltext'
