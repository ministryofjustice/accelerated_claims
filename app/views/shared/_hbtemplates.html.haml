%script#hb-yesno(type='text/x-handlebars-template')
  %fieldset.radio.inline
    %h3
      {{#if question}}
      {{question}}
      {{/if}}
      {{#if req}}
      %span.req> *
      {{/if}}
    
    .options(data-reverse='{{#if reverse}}true{{else}}false{{/if}}')
      .option
        %label(for='{{id}}-yes')
          Yes
          %input.yesno(type='radio' name='{{id}}' value='yes' id='{{id}}-yes')
      .option
        %label(for='{{id}}-no')
          No
          %input.yesno(type='radio' name='{{id}}' value='no' id='{{id}}-no')

%script#multiple-radio(type='text/x-handlebars-template')
  %fieldset.radio.inline
    %h3 {{caption}}
    .options
      {{#each items}}
      .option
        %label
          %input.multiplePanelRadio(type='radio' name='multiplePanelRadio_{{group}}' id='multiplePanelRadio_{{group}}_{{val}}' value='{{val}}')
          {{text}}
      {{/each}}

%script#title-dropdown(type='text/x-handlebars-template')
  %select.title-dropdown.small(id='{{id}}' name='{{name}}')
    %option(value='') &nbsp;
    {{#each titles}}
    %option(value='{{this}}') {{this}}
    {{/each}}
    %option(value='other') Other...

%script#title-input(type='text/x-handlebars-template')
  %input.smalltext(type='text' id='{{id}}' name='{{name}}')
