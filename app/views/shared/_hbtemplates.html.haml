%script#hb-yesno(type='text/x-handlebars-template')
  :erb
    {{#if full}}
      <fieldset class="striped-choice full">
    {{else}}
      <fieldset class="striped-choice">
    {{/if}}

  %legend
    {{#if req}}
    %span.req> *
    {{/if}}
  
  .options(data-reverse='{{#if reverse}}true{{else}}false{{/if}}')
    .row
      %input.yesno(type='radio' name='{{id}}' value='yes' id='{{id}}-yes')
      %label(for='{{id}}-yes') Yes
    .row
      %input.yesno(type='radio' name='{{id}}' value='no' id='{{id}}-no')
      %label(for='{{id}}-no') No
  :erb
    </fieldset>

%script#multiple-selector(type='text/x-handlebars-template')
  .row
    %label(for='multiplePanelSelector_{{id}}') {{caption}}
    %select.multiplePanelSelector.small(id='multiplePanelSelector_{{id}}')
      {{#each items}}
      %option(value='{{val}}') {{val}} {{text}}
      {{/each}}
  .row.divider
