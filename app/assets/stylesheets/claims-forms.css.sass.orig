@import "_colours"
@import "design-patterns/_buttons"
@import "_css3"
@import "claims-mixins"

@mixin highlight-row
  width: auto
  padding: 15px
  margin:
    left: 90px
    right: 90px

  @include media(mobile)
    margin:
      left: 15px
      right: 15px

input, [type="text"], [type="password"], button, select, textarea
  font-family: "nta", arial, sans-serif
  font-size: 19px
  margin: 0

[type="text"], [type="password"], textarea
  padding: 5px 4px 2px
  border: 1px solid $grey-2
  color: $black
  background: $white
  display: block

[type="text"].pound
  background-image: image-url('poundbg.png')
  background-position: left center
  background-repeat: no-repeat
  padding-left: 40px


[type="text"]
  display: inline-block
  width: 100%
  max-width: 300px
  @include media(mobile)
    display: block
    max-width: 280px

  &.moj-date-day
    max-width: 30px

  &.moj-date-month  
    max-width: 100px

  &.moj-date-year
    max-width: 60px

  &.pound
    padding-left: 40px
    max-width: 260px
    @include media(mobile)
      max-width: 240px
  &.smalltext
    width: 132px
    min-width: 132px
    margin-right: 168px

select
  max-width: 300px
  &.date-date, &.date-year, &.day, &.year
    width: 80px
  &.date-month, &.month, &.small
    width: 130px

textarea
  width: 100%
  max-width: 300px
  height: 110px
  &.feedback
    height: 300px
  @include media(mobile)
    max-width: 280px

fieldset, legend
  @include clearfix
  margin: 0
  padding: 0

.hint
  color: $grey-1
  font-weight: normal
  &.block
    display: block
    &.hide
      .js-enabled &
        display: none

select, option, legend
  color: $black

label
  cursor: pointer

button, .button
  padding: 8px 12px 2px
  display: inline-block
  &.primary
    @include button
  &.secondary
    @include button($grey-3)
  &.warning
    @include button(#b30816)
  &.large
    font-size: 24px
  &.chevron
    background-image: image-url('icon-pointer.png')
    background-repeat: no-repeat
    background-position: right center
    padding-right: 40px
    &:hover
      background-image: image-url('icon-pointer.png')
      background-repeat: no-repeat
      background-position: right center

span.charcount
  font-size: 14px
  margin-top: 4px
  float: right

section.flash
  border: 3px solid $grey-1
  background-color: $grey-4
  padding: 20px
  margin-bottom: 40px
  max-width: 798px
  h2
    margin: 0
    font-weight: bold
  h3
    margin: 0 0 10px
  ul
    list-style-type: none
    padding: 0
    margin: 0
  li
    list-style-type: none

  &.error-summary
    border-color: $errorcolour
    background-color: $errorbgcolour
    h2
      margin: 0 0 10px
    li
      color: $errorcolour
      a
        color: $errorcolour
        &:hover
          text-decoration: none

  &.success
    border-color: $grass-green
    background-color: $grass-green-25


span.error
  color: $errorcolour
  font-size: 16px
  display: block

  .section-header &
    display: inline
    padding-left: 8px

.section-header
  font-size: 24px
  font-weight: bold
  letter-spacing: .005em
  margin:
    left: 0
    bottom: 10px
  @include media(mobile)
    margin-left: 15px
  a
    font-size: 19px
    letter-spacing: 0
    margin-top: 4px





fieldset.plain
  padding-bottom: 20px
  label, [type='text'], [type='password']
    display: block
    font-size: 19px
  label
    margin-bottom: 10px
  a.block
    display: block
    margin: 10px 0
    font-size: 19px
  [type='text'], [type='password']
    width: 300px
    margin-bottom: 20px
  [type='submit']
    margin-top: 30px



.required-notice
  @include media(mobile)
    padding-right: 15px

.moj-panel
  @include clearfix
  background: $grey-4
  border:
    top: 1px solid $grey-2
    bottom: 1px solid $grey-2
  padding: 40px 0 30px
  margin-bottom: 50px
  font-size: 19px
  overflow-x: hidden

  &.important
    background-color: $yellow-25

  &.highlight
    background-color: $light-blue-25
    border:
      top: 1px solid $light-blue-50
      bottom: 1px solid $light-blue-50

  &.error
    background-color: $errorbgcolour
    border-left: 3px solid $errorcolour

  input[disabled="disabled"], input[readonly="readonly"]
    opacity: 1
    background-color: $grey-4
    color: $grey-1
    &:focus
      outline: none

    &.pound
      background-image: image-url('poundbg-disabled.png')

  .section-header
    margin:
      left: 90px
      top: 40px
    font-size: 24px

    &:first-child, &.nomargin
      margin-top: 0

    @include media(mobile)
      margin-left: 15px



  fieldset, .row, .sub-panel
    @include clearfix
    float: none
    clear: both
    width: auto
    padding:
      left: 90px
      right: 90px
    margin-top: 40px

    @include media(mobile)
      padding:
        left: 15px
        right: 15px

    &:first-child, &.nomargin
      margin-top: 0

    &.rel
      margin-top: 15px
      &:first-child
        margin-top: 0

    h3 + .row, h3 + .sub-panel
      margin-top: 0

    .row.js-depositTypeMoney.yes
      padding-left: 40px

  .sub-panel
    padding: 0

    &.inset
      background-color: $white
      padding: 30px 0
      margin:
        left: 90px
        right: 90px

      @include media(mobile)
        margin:
          left: 15px
          right: 15px

        [type="text"], textarea
          max-width: 250px
          &.pound
            max-width: 210px

      .row, fieldset
        padding:
          left: 30px
          right: 30px
        @include media(mobile)
          padding:
            left: 15px
            right: 15px

        .row
          padding:
            left: 0
            right: 0

      li
        .row, fieldset
          padding:
            left: 0
            right: 0

    h3.person
      padding-left: 90px
      font-weight: bold
      margin-bottom: 15px
      @include media(mobile)
        padding:
          left: 15px



  fieldset
    &.error
      padding:
        left: 87px
        top: 15px
        bottom: 15px
      border-left: 3px solid $errorcolour
      background-color: $errorbgcolour

      @include media(mobile)
        padding-left: 7px

    legend, h3, .legend
      font-size: 19px
      display: block
    &.radio
      .options
        padding-top: 10px
      .option
        padding: 0
        margin-top: 15px
        &:first-child
          margin-top: 0

        label
          display: block
          clear: left
          float: none
          width: auto
          position: relative
          background: $grey-3
          border: 1px solid $grey-3
          padding: 18px 30px 15px 45px
          cursor: pointer
          &:hover
            border-color: $black
          &.highlight
            background-color: $white
            border-color: $black
          &.focus
            outline: 3px solid $yellow
            input
              outline: none

          span.hint
            display: block

          input
            position: absolute
            left: 17px
            top: 22px
            cursor: pointer
    &.inline
      .option
        float: left
        margin:
          right: 15px
          top: 0
          bottom: 15px

    &.date-picker
      .row
        margin-top: 5px
        padding:
          left: 0
          right: 0
        select
          float: left
          clear: none
      [type="text"]
        display: inline-block

    .option
      @include clearfix
      &.error
        border-left: 3px solid $errorcolour
        background-color: $errorbgcolour
        label
          background-color: $errorbgcolour
          border-color: $errorbgcolour
        span.error
          margin-left: 45px

      margin-top: 45px
      &:first-child
        margin-top: 15px


    label
      display: inline-block
      margin:
        left: 0
        right: 0
      line-height: 25px

      @include media(mobile)
        display: block
        float: none
        width: auto
        margin-left: 0


  .row
    @include clearfix
    &.error
      padding:
        left: 87px
        top: 15px
        bottom: 15px
      border-left: 3px solid $errorcolour
      background-color: $errorbgcolour

      @include media(mobile)
        padding-left: 12px

    label
      width: auto
      float: left
      display: block
      margin:
        left: 0
        right: 0

      @include media(mobile)
        display: block
        float: none
        width: auto
        margin-left: 0

      .row, fieldset
        padding:
          left: 0
          right: 0

    [type="text"]
      display: block
      clear: left
      width: 300px

      &.pound
        padding-left: 40px
        width: 260px
      &.smalltext
        width: 150px
        min-width: 150px
        margin-right: 150px

    select
      display: block
      clear: left
      width: 300px
      &.date-date, &.date-year, &.day, &.year
        width: 80px
      &.date-month, &.month, &.small
        width: 130px

    textarea
      display: block
      clear: left
      &.feedback
        height: 300px

    &.divider
      width: auto
      height: 25px
      padding: 0
      margin:
        left: 90px
        right: 90px
        top: 15px
        bottom: 30px
      overflow: hidden
      border-bottom: 1px dotted #c2c2c2

      @include media(mobile)
        margin:
          top: 0
          left: 15px
          right: 15px

    &.warning
      @include highlight-row
      background-color: $mellow-red-25

    &.highlight
      @include highlight-row
      background-color: $white

    &.warning, &.information, &.highlight
      p, ul, ol
        width: auto
        margin: 1em 0 0 0
        &:first-child
          margin-top: 0
      li
        margin: 5px 0

    .statements
      clear: both
      float: left
      ol
        margin:
          top: 0
          bottom: 0
        clear: both
        float: left
        padding:
          left: 30px
          right: 30px
      li
        list-style-type: none
        margin-bottom: 15px
        clear: both
        float: left

        input[type="checkbox"]
          width: 20px
          position: absolute
          margin-left: -30px
          margin-top: 5px

        &.noticeStatement
          .row, fieldset
            clear: both
            float: left
            margin-top: 10px
            padding-left: 0

            .row
              padding-left: 0


.js-enabled
  .details
    .row
      display: none
      &:first-child
        display: block
    .caption
      padding-left: 20px
      background: image-url('summary-arrow-sprite.gif') 0 5px no-repeat
      color: $link-colour
      cursor: pointer
      &:hover
        text-decoration: underline
      &:focus
        background: rgb(254, 188, 64) image-url('summary-arrow-sprite.gif') 0 5px no-repeat
    &.open
      .row
        display: block
      .caption
        background-position: -1000px 5px
        color: $link-active-colour
        &:focus
          background: rgb(254, 188, 64) image-url('summary-arrow-sprite.gif') 0 5px no-repeat


.noticeStatement
  .row, fieldset
    float: left



.confirmation
  margin-top: 50px
  h1
    text-align: center
    padding: 70px 0 30px
    background: image-url('confirmation-tick.png') center top no-repeat
    font-size: 2em
  h2
    text-align: center
    margin: 40px 0
    padding: 20px 0 10px
    font-size: 24px
    font-weight: normal
    background: $grey-4
    border:
      top: 1px solid $grey-2
      bottom: 1px solid $grey-2

    strong
      display: block
      font-size: 48px
  p
    text-align: center
    margin: 0

.next
  font-size: 19px
  h2
    font-size: 32px

.fragment-wrapper
  padding-top: 15px

.action-buttons
  margin-bottom: 40px
  @include media(mobile)
    padding-left: 15px

